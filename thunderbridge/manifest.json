{
    "manifest_version": 2,
    "name": "Tl;Dr",
    "description": "Thunderbird bridge for local LLM mail summarizer",
    "version": "0.1",
    "author": "Div",
    "homepage_url": "https://not.set.yet",
    "browser_specific_settings": {
        "gecko": {
            "id": "helloworld@yoursite.com",
            "strict_min_version": "78.0"
        }
    },

    "background": {
        "scripts": [
            "socket.io.min.js",
            "background.js"
        ]
    },

    "permissions": [
        "activeTab",
        "menus",
        "messagesRead",
        "accountsRead",
        "tabs",
        "http://127.0.0.1:5000/"
    ]

}
